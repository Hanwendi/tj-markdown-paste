<%= render 'mathjax' %>
<% if @post.show_title %>
  <h1><%= @post.title %></h1>
<% end %>
<%= @post.markup_content %>
<hr>
<%= render 'share/share_btns' %>
<%= render "share/disqus" %>
<div class="footer">
  <p>
    Powered by <%= link_to t("site_name"), root_url %>
    <% if can? :update, @post %>
      | <%= link_to t('tj.form.edit'), edit_post_path(@post) %>
      | <%= link_to t('tj.form.destroy'), @post, method: :delete, confirm: 'Are you sure?' %>
      | <%= link_to t('tj.form.back'), current_user %>
    <% end %>
  </p>
</div>