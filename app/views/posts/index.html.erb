<%= link_to t("helpers.submit.create", :model => Post), new_post_path, class: "btn btn-success btn-large" %>
<% if @posts.empty? %>
  <h2>No post here :(</h2>
<% else %>
  <%= will_paginate @posts %>
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      
      <%= content_tag_for(:tr, @posts) do |post| %>
        <td><%= link_to post.title, post %></td>
        <td><%= post.content.truncate 70 %></td>
        <td><%= link_to t('tj.form.edit'), edit_post_path(post), class: "btn btn-info btn-mini" %>
        <%= link_to t('tj.form.destroy'), post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-mini" %></td>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @posts %>
<% end %>