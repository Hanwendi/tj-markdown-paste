<%= link_to t("helpers.submit.create", :model => Post), new_post_path, class: "btn btn-success btn-large" %>
<% if @posts.empty? %>
  <h2>No post here :(</h2>
<% else %>
  <%= will_paginate @posts %>
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      
      <%= content_tag_for(:tr, @posts) do |post| %>
        <td><%= link_to post.title, post %></td>
        <td><%= post.content.truncate 70 %></td>
        <td><%= render 'posts/manage_links', post: post %></td>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @posts %>
<% end %>